<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Mobile.MAUI.Pages.Login"
             Title="Login" >

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,0,0,60">
        <Label Padding="0,0,0,10" FontAttributes="Bold"
            Text="Email"
            HorizontalOptions="StartAndExpand" />
        <Entry x:Name="email" Placeholder="Enter your email" WidthRequest="200"></Entry>

        <Label Padding="0,10,0,10" FontAttributes="Bold"
            Text="Password"
            HorizontalOptions="StartAndExpand" />
        <Entry x:Name="password" Placeholder="**********" WidthRequest="200" ></Entry>

        <Button Text="Login" Margin="0,10,0,10" FontAttributes="Bold" Clicked="OnLoginButtonClicked"></Button>

        <Button Text="Cancel" Margin="0,10,0,10" BackgroundColor="Red" FontAttributes="Bold"></Button>

    </StackLayout>


</ContentPage>